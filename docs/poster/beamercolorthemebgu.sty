% ====================
% Definitions
% ====================

\definecolor{bguorange}{RGB}{242, 145, 0} % official orange color for bgu

% Extra colors
\definecolor{lightgrey}{RGB}{237, 239, 241}
\definecolor{lightorange}{RGB}{251, 204, 147}
\definecolor{grey}{RGB}{88, 89, 91}
\definecolor{orange}{RGB}{247, 148, 30}

% ====================
% Theme
% ====================

% Basic colors
\setbeamercolor{palette primary}{fg=black,bg=white}
\setbeamercolor{palette secondary}{fg=black,bg=white}
\setbeamercolor{palette tertiary}{bg=black,fg=white}
\setbeamercolor{palette quaternary}{fg=black,bg=white}
\setbeamercolor{structure}{fg=orange}

% Headline
\setbeamercolor{headline}{fg=grey,bg=white}

% Block
\setbeamercolor{block title}{fg=orange,bg=white}
\setbeamercolor{block separator}{bg=black}
\setbeamercolor{block body}{fg=black,bg=white}

% Alert Block
\setbeamercolor{block alerted title}{fg=white,bg=orange}
\setbeamercolor{block alerted separator}{bg=grey}
\setbeamercolor{block alerted body}{fg=black,bg=lightorange}

% Example Block
\setbeamercolor{block example title}{fg=white,bg=grey}
\setbeamercolor{block example separator}{bg=lightgrey}
\setbeamercolor{block example body}{fg=black,bg=lightgrey}

% Heading
\setbeamercolor{heading}{fg=black}

% Itemize
\setbeamercolor{item}{fg=orange}

% Bibliography
\setbeamercolor{bibliography item}{fg=black}
\setbeamercolor{bibliography entry author}{fg=black}
\setbeamercolor{bibliography entry title}{fg=black}
\setbeamercolor{bibliography entry location}{fg=black}
\setbeamercolor{bibliography entry note}{fg=black}
